    <script>

        function abrir(var1) {
            $("#quitar").css("display", "block");
            $("#quitar").addClass("menu-abierto");
            $("#qui").addClass("opc");

            $(".menu-abierto").css("display", "block");
            $(".opc").css("display", "block");

